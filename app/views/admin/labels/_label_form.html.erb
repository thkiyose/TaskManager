<div class="container">
  <p>ラベルを作成する</p>
  <%= form_with(model:[:admin,@label], local:true) do |form| %>
    <% if @label.errors.any? %>
        <% @label.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
    <% end %>
    <p><%= form.label :label_name %><%= form.text_field :label_name %></p>
    <p class="dropdown_original"><%= form.label :color %><%= form.select :color, Label.colors.keys %></p>
    <%= form.submit %>
  <% end %>
</div>
