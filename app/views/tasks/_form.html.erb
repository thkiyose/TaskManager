<div class="modal-dialog">
  <div class="modal-content">
    <%= form_with(model:@task, remote: true) do |form| %>
      <% if @task.errors.any? %>
          <% @task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
      <% end %>

      <p><%= form.label :content %></p>
      <p><%= form.text_field :content, class:"form" %></p>
      <p><%= form.label :detail %></p>
      <p><%= form.text_area :detail, class:"form" %></p>
      <p><%= form.label :status %><%= form.select :status, Task.statuses.keys %></p>
      <p><%= form.label :limit %></p>
      <% if controller.action_name == "edit" || controller.action_name == "update" %>
        <p><%= form.datetime_select :limit, include_blank: true, start_year: Date.today.year, minute_step: 5, selected: @task.limit %></p>
        <%= form.submit class: "btn btn-primary" %>
      <% else %>
        <p><%= form.datetime_select :limit, include_blank: true, start_year: Date.today.year, minute_step: 5, selected: Date.today %></p>
        <%= form.submit class: "btn btn-primary" %>
      <% end %>
    <% end %>
  </div>
</div>
