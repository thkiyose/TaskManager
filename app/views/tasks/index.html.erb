<div class="container">
  <table class="task_table">
    <tr>
      <th>内容</th>
    </tr>
    <% @tasks.each do |task| %>
      <tr class="task_row">
        <td><%= link_to task_path(task.id), remote: true do %>
          <%= task.content %>
        <% end %></td>
        <td><%= link_to "編集", edit_task_path(task.id), remote: true %></td>
        <td><%= link_to "削除", task_path(task.id), method: :delete %></td>
      </tr>
    <% end %>
  </table>
</div>
<div class="modal fade" id="user-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true"></div>
