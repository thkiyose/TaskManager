<div class="modal-dialog">
  <div class="modal-content">
    <p class="show_content"><%= @task.content %></p>
    <p class="show_detail"><%= @task.detail %></p>
    <p><span class="show_status">ステータス: <%= @task.status %></span>  <span class="show_priority" >優先順位: <%= @task.priority %></p>
    <% if @task.limit %>
      <p class="show_limit">終了期限:<%= l @task.limit, format: :long %></p>
    <% end %>
  </div>
</div>
