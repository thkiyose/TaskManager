<div class="modal-dialog">
  <div class="modal-content">
    <%= form_with(method: :get, local:true, url:tasks_path) do |form| %>
      <p>タスクの内容</p>
      <p><%= form.text_field :content %> </p>
      <%= form.hidden_field :search, value: "true" %>
      <p><%= form.submit "検索", class:"btn btn-primary" %></p>
    <% end %>
  </div>
</div>
