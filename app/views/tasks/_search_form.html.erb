<div class="modal-dialog">
  <div class="modal-content">
    <%= form_with(model:Task.new, method: :get, local:true, url:tasks_path) do |form| %>
      <p><%= form.label :content %></p>
      <p><%= form.text_field :content %> </p>
      <p><%= form.label :status %><%= form.select :status, Task.statuses.keys, include_blank: true %></p>
      <%= form.hidden_field :search, value: "true" %>
      <p><%= form.submit "検索", class:"btn btn-primary" %></p>
    <% end %>
  </div>
</div>
